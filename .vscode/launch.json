{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Gatsby develop",
        "type": "pwa-node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/gatsby",
        "args": ["develop"],
        "runtimeArgs": ["--nolazy"],
        "console": "integratedTerminal"
      },
      {
        "name": "Gatsby develop (mobile)",
        "type": "pwa-node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/gatsby",
        "args": ["develop", "-H", "0.0.0.0"],
        "runtimeArgs": ["--nolazy"],
        "console": "integratedTerminal"
      },
      {
        "name": "Gatsby build",
        "type": "pwa-node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/gatsby",
        "args": ["build"],
        "runtimeArgs": ["--nolazy"],
        "console": "integratedTerminal"
      }
    ]
  }